/**
 * Gets grade from rating for a provider.
 */
function hr_misc_getProviderGradeFromRating($r) {
  
  if ($r > 5) {
    $r = number_format( (0.05 * $r), 1 );
  }
  
  $grades = array(
    'A+' => array(4.8, 5.0),
    'A' => array(4.4, 4.7),
    'A-' => array(4.2, 4.3),

    'B+' => array(4.0, 4.1),
    'B' => array(3.7, 3.9),
    'B-' => array(3.3, 3.6),

    'C+' => array(3.1, 3.2),
    'C' => array(2.9, 3.0),
    'C-' => array(2.5, 2.8),

    'D+' => array(2.1, 2.4),
    'D' => array(1.9, 2.0),
    'D-' => array(1.6, 1.8),

    'F' => array(1.0, 1.5),
  );
  
  foreach ($grades as $grade => $borders) {
    if ($r >= $borders[0] && $r <= $borders[1]) {
      return $grade;
    }
  }
  
  return '';
}


