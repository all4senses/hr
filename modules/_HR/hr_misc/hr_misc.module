  //$out_sprite_ext = 'png';
  $out_sprite_ext = 'jpg';
  
  $time =  time();
  
  $sprites_generated = 0;
  
  foreach ($input_providers_data as $providers_logos_sprite_name => $providers_logos_sprite) {
    
    $out_sprite['file'] = $out_sprite_path . $providers_logos_sprite_name . '.' . $out_sprite_ext;
