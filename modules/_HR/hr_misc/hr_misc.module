    return $ucaptured;
  }
  
  $fields = array(
      'Email' => 'email', 
      'First Name' => 'firstname', 
      'Last Name' => 'lastname',
      //'Name' => 'name',
      'Phone #' => 'phone',
      //'Phone 1' => 'phone_1',
